	text-indent:25px;
}
body{
		background-color: #dddddd;
		color:black;
	}
div#interface{
				width:1300px;
				margin:-20px auto 0px auto;
				padding:10px;
				box-shadow:0px 0px 10px rgba(0,0,0,0.5);
				height:1000px;
	
}


header#cabecalho{
				border-bottom:2px #606060 solid;
				height:150px;
				
}
header#cabecalho h1{
				font-family:arial,sans-serif;
				font-size:30pt;
				color:#606060;
				padding:0px;
				margin-bottom:5px;
				margin-top:30px;
}
header#cabecalho h2{
				font-family:arial, sans-serif;
				font-size:15pt;
				color:#0198ae;
				padding:0px;
				margin-top:0px;
}

img#icone{
				position:absolute;
				left:1080px;
				top:38px;
				width:18%;
				height:18%;
}
section#principal{
					display:block;
					width:700px;
					float:left;
					border-right:2px solid #606060;
}
article#ap h2{
					font-family:arial, sans-serif;
					font-size:12px;
					color:white;
					background-color:#0198ae;
					padding:6px 0px 6px 6px;
					margin:10px 0px 10px 0px;
}
aside#lateral{
					display:block;
					width:500px;
					float:right;
					padding:15px;
					
}
footer#rodape{
					clear:both;
					text-align:center;
					border-top:2px solid #606060;
}
iframe#frame{
		width:700px;border:none;height:300px;
}

	/*formatação imagem*/
	
figure.imagem-legenda{
					border:10px solid white;
					box-shadow: 1px 1px 4px black;
					position:relative;
					}
figure.imagem-legenda img{
						width:100%;
						height:100%;
						}
figure.imagem-legenda figcaption{
								background-color:rgba(0, 0, 0, 0.4);
								color:white;
								width:100%; height:100%;
								position:absolute;top:0px;
								box-sizing:border-box;
								opacity:0;
								}
figure.imagem-legenda:hover figcaption{
								opacity:1;
										}
										
/*Config Menu*/

nav#menu{
			display:block;
}

nav#menu ul{
			list-style:none;
			text-transform:uppercase;
			position:absolute;	
			top:-20px;
			left:800px;
}
nav#menu li{
			display:inline-block;
			background-color:#dddddd;
			padding:10px;
			margin:2px;
			
}
nav#menu li:hover{
	background-color:#0198ae;
	
}
nav#menu a:hover{
	color:white;
}
nav#menu h1{
	display:none;
}
nav#menu a{
	text-decoration:none;
}
/*Formatação da table*/
table#novastags{
			border: 1px solid #606060;
			border-spacing:2px;
			margin-left:auto;
			margin-right:auto;
			padding:10px;	
}
table#novastags td{
			text-align:center;
			padding:6px;
			border: 1px solid #606060;
}
table#novastags td.tag{
					color:white;
					background-color:#0198ae;
					font-weight:bold;
					
}
table#novastags td.util{
				color:#606060;
				text-align:left;
}
section#history h1{
		background-color:#CC0000;
		
}